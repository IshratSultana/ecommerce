<!-- Navbar -->
<%- include('../../partials/customer/navbar') %>
<!-- /.navbar -->
<aside id="colorlib-hero" class="breadcrumbs">
    <div class="flexslider">
        <ul class="slides">
            <li style="background-image: url(../../../public/assets-customer/images/cover-img-1.jpg);">
                <div class="overlay"></div>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3 col-sm-12 col-xs-12 slider-text">
                            <div class="slider-text-inner text-center">
                                <h1>Products</h1>
                                <h2 class="bread"><span><a href="/">Home</a></span> <span>Shop</span></h2>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</aside>
<div class="colorlib-shop">
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-push-2">
                <div class="row row-pb-lg col-md-12" id="products">
                    <% if (landingDefaultProducts.length > 0) { %>
                        <% for(var j = 0; j < landingDefaultProducts.length; j++) { %>
                            <div class="col-md-4 text-center">
                                <div class="product-entry">
                                    <div class="product-img"
                                         style="background-image: url(<%= '/public/uploads/' + landingDefaultProducts[j].image_name %>);">
                                        <div class="cart">
                                            <p>
                                        <span class="addtocart" id="<%= landingDefaultProducts[j].id %>"><a href="javascript:void(0)"><i
                                                        class="icon-shopping-cart"></i></a></span>
                                                <span><a href="/products/<%= landingDefaultProducts[j].id %>/detail"><i
                                                                class="icon-eye"></i></a></span>
                                            </p>
                                        </div>
                                    </div>
                                    <div class="desc">
                                        <h3>
                                            <a href="/products/<%= landingDefaultProducts[j].id %>/detail"><%= landingDefaultProducts[j].name %></a>
                                        </h3>
                                        <p class="price"><span>Tk &nbsp<%= landingDefaultProducts[j].sale_price %></span></p>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    <% } %>
                </div>
                <div id="products-msg">

                </div>
                <div class="wrapper" style="display: none" align="center">
                    <div class="loader"></div>
                </div>
            </div>
            <div class="col-md-2 col-md-pull-10">
                <div class="sidebar">
                    <div class="side">
                        <h2>Categories</h2>
                        <div class="fancy-collapse-panel">
                            <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                                <% if (parents.length > 0) { %>
                                    <% for(var i = 0; i < parents.length; i++) { %>
                                        <div class="panel panel-default">
                                            <div class="panel-heading" role="tab"
                                                 id="heading<%= parents[i].name.replace(" ", "-") %>">
                                                <h4 class="panel-title">
                                                    <a class="collapsed cat-name" data-toggle="collapse"
                                                       data-parent="#accordion"
                                                       href="#collapse<%= parents[i].name.replace(" ", "-") %>"
                                                       aria-expanded="true"
                                                       aria-controls="collapse<%= parents[i].name.replace(" ", "-") %>"><small><b><%= parents[i].name %></b></small>
                                                    </a>
                                                </h4>
                                            </div>
                                            <% if (categories.length > 0) { %>
                                                <div id="collapse<%= parents[i].name.replace(" ", "-") %>"
                                                     class="panel-collapse collapse"
                                                     role="tabpanel"
                                                     aria-labelledby="heading<%= parents[i].name.replace(" ", "-") %>">
                                                    <div class="panel-body">
                                                        <ul>
                                                            <% for(var j = 0; j < categories.length; j++) { %>
                                                                <% if (categories[j].parent === parents[i].id) { %>
                                                                    <li>
                                                                        <a class="cat-child" href="/shop/<%= parents[i].name %>/<%= categories[j].slug %>"><small><%= categories[j].name %></small></a>
                                                                    </li>
                                                                <% } %>
                                                            <% } %>
                                                        </ul>
                                                    </div>
                                                </div>
                                            <% } %>
                                        </div>
                                    <% } %>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <div class="side">
                        <h2>Price Range</h2>
                        <form method="post" class="colorlib-form-2">
                            <input type="hidden" id="parentId" value="<%= parentId %>">
                            <input type="hidden" id="categoryId" value="<%= categoryId %>">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="guests">Price from:</label>
                                        <div class="form-field">
                                            <i class="icon icon-arrow-down3"></i>
                                            <select name="price_from" id="price_from"
                                                    class="form-control select-price-range">
                                                <option value="1">1</option>
                                                <option value="200">200</option>
                                                <option value="300">300</option>
                                                <option value="400">400</option>
                                                <option value="1000">1000</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="guests">Price to:</label>
                                        <div class="form-field">
                                            <i class="icon icon-arrow-down3"></i>
                                            <select name="price_to" id="price_to"
                                                    class="form-control select-price-range">
                                                <option value="2000">2000</option>
                                                <option value="4000">4000</option>
                                                <option value="6000">6000</option>
                                                <option value="8000">8000</option>
                                                <option value="10000">10000</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="gototop js-top">
    <a href="#" class="js-gotop"><i class="icon-arrow-up2"></i></a>
</div>
<!-- Footer -->
<%- include('../../partials/customer/footer') %>
