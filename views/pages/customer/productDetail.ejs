<!-- Navbar -->
<%- include('../../partials/customer/navbar') %>
<!-- /.navbar -->
<aside id="colorlib-hero" class="breadcrumbs">
    <div class="flexslider">
        <ul class="slides">
            <li style="background-image: url(../../../public/assets-customer/images/cover-img-1.jpg);">
                <div class="overlay"></div>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3 col-sm-12 col-xs-12 slider-text">
                            <div class="slider-text-inner text-center">
                                <h1>Product Detail</h1>
                                <h2 class="bread"><span><a href="/">Home</a></span> <span><a
                                                href="/shop">Shop</a></span>
                                    <span>Product Detail</span></h2>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</aside>
<div class="colorlib-shop">
    <div class="container">
        <div class="row row-pb-lg">
            <div class="col-md-10 col-md-offset-1">
                <div class="product-detail-wrap">
                    <div class="row">
                        <div class="col-md-5">
                            <div class="product-entry">
                                <div class="product-img"
                                     style="background-image: url(<%= '/public/uploads/' + product.image_name %>);">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-7">
                            <div class="desc">
                                <h3><%= product.name %></h3>
                                <p class="price">
                                    <span>Tk &nbsp<%= product.sale_price %></span>
                                </p>
                                <p><%= product.description %></p>
                                <div class="row row-pb-sm">
                                    <div class="col-md-4">
                                        <div class="input-group">
<span class="input-group-btn">
<button type="button" class="quantity-left-minus btn" data-type="minus" data-field="">
<i class="icon-minus2"></i>
</button>
</span>
                                            <input type="number" id="quantity" name="quantity"
                                                   class="form-control input-number" value="1" min="1" max="100">
                                            <span class="input-group-btn">
<button type="button" class="quantity-right-plus btn" data-type="plus" data-field="">
<i class="icon-plus2"></i>
</button>
</span>
                                        </div>
                                    </div>
                                </div>
                                <p><a href="javascript:void(0)" class="btn btn-primary btn-addtocart" id="<%= product.id %>"><i
                                                class="icon-shopping-cart"></i> Add to Cart</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="colorlib-shop">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center colorlib-heading">
                <h2><span>Similar Products</span></h2>
            </div>
        </div>
        <div class="row">
            <% if(similarProducts.length > 0){ %>
                <% for(var i = 0; i < similarProducts.length; i++) { %>
                    <div class="col-md-3 text-center">
                        <div class="product-entry">
                            <div class="product-img"
                                 style="background-image: url(<%= '/public/uploads/' + similarProducts[i].image_name %>);">
                                <p class="tag"><span class="new">New</span></p>
                                <div class="cart">
                                    <p>
                                    <span class="addtocart" id="<%= similarProducts[i].id %>"><a href="javascript:void(0)"><i
                                                    class="icon-shopping-cart"></i></a></span>
                                        <span><a href="/products/<%= similarProducts[i].id %>/detail"><i
                                                        class="icon-eye"></i></a></span>
                                    </p>
                                </div>
                            </div>
                            <div class="desc">
                                <h3>
                                    <a href="/products/<%= similarProducts[i].id %>/detail"><%= similarProducts[i].name %></a>
                                </h3>
                                <p class="price"><span>Tk &nbsp<%= similarProducts[i].sale_price %></span></p>
                            </div>
                        </div>
                    </div>
                <% } %>
            <% } else{ %>
                <h1 class="text-center text-muted">No products found.</h1>
            <% } %>
        </div>
    </div>
</div>

<div class="gototop js-top">
    <a href="#" class="js-gotop"><i class="icon-arrow-up2"></i></a>
</div>
<!-- Footer -->
<%- include('../../partials/customer/footer') %>
<!-- /.Footer -->
