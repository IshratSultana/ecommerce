<!-- Navbar -->
<%- include('../../partials/customer/navbar') %>
<!-- /.navbar -->
<aside id="colorlib-hero" class="breadcrumbs">
    <div class="flexslider">
        <ul class="slides">
            <li style="background-image: url(../../../public/assets-customer/images/cover-img-1.jpg);">
                <div class="overlay"></div>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3 col-sm-12 col-xs-12 slider-text">
                            <div class="slider-text-inner text-center">
                                <h1>Shopping Cart</h1>
                                <h2 class="bread"><span><a href="/">Home</a></span> <span><a
                                                href="/shop">Shop</a></span>
                                    <span>Shopping Cart</span></h2>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</aside>
<div class="colorlib-shop">
    <div class="container">
        <div class="row row-pb-md">
            <div class="col-md-10 col-md-offset-1">
                <div class="process-wrap">
                    <div class="process text-center active">
                        <p><span>01</span></p>
                        <h3>Shopping Cart</h3>
                    </div>
                    <div class="process text-center">
                        <p><span>02</span></p>
                        <h3>Checkout</h3>
                    </div>
                    <div class="process text-center">
                        <p><span>03</span></p>
                        <h3>Order Complete</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="row row-pb-md">
            <div class="col-md-10 col-md-offset-1" id="cart-detail">
                <div class="wrapper">
                    <div class="loader"></div>
                </div>
            </div>
        </div>
        <div class="row" id="additional-things" style="display: none;">
            <div class="col-md-10 col-md-offset-1">
                <div class="total-wrap">
                    <div class="row">
                        <div class="col-md-8" id="apply-coupon-area" style="display: block">
                            <form action="#">
                                <div class="row form-group">
                                    <div class="col-md-9">
                                        <input type="text" name="coupon" class="form-control input-number" required
                                               placeholder="Your Coupon Code...">
                                        <small class="text-danger" id="coupon-val-err-msg"></small>
                                    </div>
                                    <div class="col-md-3">
                                        <input type="button" value="Apply Coupon" class="btn btn-primary"
                                               id="apply-coupon-btn">
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-3 col-md-push-1 text-center" id="addiitonal-info">
                            <div class="total">
                                <div class="sub">
                                    <p><span>Subtotal:</span> <span id="sub_total">_</span></p>
                                    <p><span>Delivery:</span> <span id="delivery_charge">_</span></p>
                                    <p><span>Discount:</span> <span id="discount">_</span></p>
                                </div>
                                <div class="grand-total">
                                    <p><span><strong>Total:</strong></span> <span id="total">_</span></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12" align="center" id="proceed2checkout">
                <a href="/checkout" class="btn btn-primary rounded-pill">Proceed to Checkout</a>
            </div>
        </div>
    </div>
</div>

<div class="gototop js-top">
    <a href="#" class="js-gotop"><i class="icon-arrow-up2"></i></a>
</div>
