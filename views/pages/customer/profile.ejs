<!-- Navbar -->
<%- include('../../partials/customer/navbar') %>
<!-- /.navbar -->
<div class="colorlib-shop">
    <div class="container">
        <% if(orders.length > 0){ %>
            <div class="row">
                <div class="col-md-10 col-md-offset-1 text-center">
                    <h1 class="text-muted">Your orders</h1>
                    <hr/>
                    <% for(var i = 0; i < orders.length; i++) { %>
                        <div>You ordered $<b><%= orders[i].amount.toFixed(2) %></b>
                            at <%= orders[i].time.toLocaleDateString("en-US") %> <span
                                    class="label <%= orders[i].status === "Pending" ? "label-warning" : [orders[i].status === "Delivered" ? "label-success" : "label-danger"] %>"><%= orders[i].status %></span>
                        </div>
                        <hr/>
                    <% } %>
                </div>
            </div>
        <% } else{ %>
            <div class="row">
                <div class="col-md-10 col-md-offset-1 text-center">
                    <span class="icon"><i class="icon-shopping-cart"></i></span>
                    <h2>You didn't order anything yet</h2>
                    <p>
                        <a href="/shop" class="btn btn-primary btn-outline">Shop Something</a>
                    </p>
                </div>
            </div>
        <% } %>
    </div>
</div>
<!-- Footer -->
<%- include('../../partials/customer/footer') %>
<!-- /.Footer -->