<div class="wrapper">

    <!-- Navbar -->
    <%- include('../../partials/admin/navbar') %>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <%- include('../../partials/admin/sidebar') %>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-12">
                        <h1 class="m-0">Profile</h1>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-6">
                        <!-- general form elements -->
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">Change your profile information</h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            <form id="profile-form">
                                <input type="hidden" name="id" value="<%= profile.id %>">
                                <input type="hidden" value="<%= profile.avatar %>" name="uploaded_image_name">
                                <input type="hidden" value="<%= profile.password %>" name="hashed_password">
                                <div class="card-body">
                                    <div class="form-group">
                                        <label>First Name</label>
                                        <input type="text" class="form-control" name="first_name"
                                               value="<%= profile.first_name %>">
                                        <small class="text-danger" id="first_name-val-err-msg"></small>
                                    </div>
                                    <div class="form-group">
                                        <label>Last Name</label>
                                        <input type="text" class="form-control" name="last_name"
                                               value="<%= profile.last_name %>">
                                        <small class="text-danger" id="last_name-val-err-msg"></small>
                                    </div>
                                    <div class="form-group">
                                        <label>Contact No.</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend col-3">
                                                <select class="form-control" name="code">
                                                    <% countryCodeWithNameAndFlagList.forEach(function(countryCodeWithNameAndFlag) { %>
                                                        <option value="<%= countryCodeWithNameAndFlag.number %>" <%= profile.code === countryCodeWithNameAndFlag.number ? 'selected' : '' %>><%= countryCodeWithNameAndFlag.name %>
                                                            (<%= countryCodeWithNameAndFlag.number %>)
                                                        </option>
                                                    <% }) %>
                                                </select>
                                            </div>
                                            <!-- /btn-group -->
                                            <input type="text" class="form-control" name="number"
                                                   value="<%= profile.number %>">
                                        </div>
                                        <small class="text-danger" id="number-val-err-msg"></small>
                                    </div>
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input type="email" class="form-control" name="email"
                                               value="<%= profile.email %>" readonly>
                                        <small class="text-danger" id="email-val-err-msg"></small>
                                    </div>
                                    <div class="form-group">
                                        <label>Password <small>(Leave blank if do not want to change)</small></label>
                                        <input type="password" class="form-control" name="password">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputFile">Avatar</label>
                                        <div class="input-group">
                                            <div class="custom-file">
                                                <input type="file" class="custom-file-input" id="file" name="file"
                                                       accept="image/*">
                                                <label class="custom-file-label" for="exampleInputFile">Choose
                                                    file</label>
                                            </div>
                                            <div class="input-group-append">
                                                <span class="input-group-text">Upload</span>
                                            </div>
                                        </div>
                                        <small class="text-danger" id="file-val-err-msg"></small>
                                    </div>
                                    <div class="form-group">
                                        <img id="profile-avatar"
                                             src="<%= profile.avatar ? '/public/uploads/' + profile.avatar : '' %>"
                                             class="rounded mx-auto d-block img-fluid"
                                             alt="Your avatar">
                                    </div>
                                </div>
                                <!-- /.card-body -->
                                <div class="card-footer">
                                    <button type="submit" class="btn btn-primary">Change</button>
                                </div>
                            </form>
                        </div>
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</div>
<!-- ./wrapper -->
