<div class="login-box">
    <!-- /.login-logo -->
    <div class="card card-outline card-primary">
        <div class="card-header text-center">
            <a href="#" class="h1"><b>E</b>com</a>
        </div>
        <div class="card-body">
            <p class="login-box-msg">Sign in to start your session</p>

            <form action="/admin/login" method="post">
                <div class="input-group mb-3">
                    <input required type="email" class="form-control" placeholder="Email" name="email"
                           value="<%= typeof errMsg != "undefined" || typeof valErrors != "undefined" ? data.email : "" %>">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input required type="password" class="form-control" placeholder="Password" name="password"
                           value="<%= typeof errMsg != "undefined" || typeof valErrors != "undefined" ? data.password : "" %>">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-8">
                        <p class="mb-1">
                            <a href="#">I forgot my password</a>
                        </p>
                    </div>
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
            <% if (typeof valErrors != "undefined") { %>
                <% for (const [key, value] of Object.entries(valErrors)){ %>
                    <div class="alert alert-danger mt-2">
                        <strong><%= value.msg %></strong>
                    </div>
                <% } %>
            <% } %>
            <% if (typeof errMsg != "undefined" ) { %>
                <div class="alert alert-danger mt-2">
                    <strong><%= errMsg %></strong>
                </div>
            <% } %>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>
