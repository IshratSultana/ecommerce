    <div class="modal fade" id="change-site-settings">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Change Site Settings</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- form start -->
                    <form id="site-settings-form">
                        <div class="card-body">
                            <div class="form-group">
                                <label>Logo</label>
                                <div class="input-group">
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" name="logo" id="logo" accept="image/*">
                                        <label class="custom-file-label">Choose file</label>
                                    </div>
                                </div>
                                <small class="text-danger" id="logo-val-err-msg"></small>
                                <div class="mt-4">
                                    <img id="image-logo" src="#" class="rounded mx-auto d-block img-fluid"
                                         alt="Site logo">
                                </div>
                                <input type="hidden" name="uploaded_logo_name">
                            </div>
                            <div class="form-group">
                                <label>Banner</label>
                                <div class="input-group">
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" name="banner" id="banner" accept="image/*">
                                        <label class="custom-file-label">Choose file</label>
                                    </div>
                                </div>
                                <small class="text-danger" id="banner-val-err-msg"></small>
                                <div class="mt-4">
                                    <img id="image-banner" src="#" class="rounded mx-auto d-block img-fluid"
                                         alt="Site banner">
                                </div>
                                <input type="hidden" name="uploaded_banner_name">
                            </div>
                            <div class="form-group">
                                <label>Footer</label>
                                <textarea class="form-control" name="footer"
                                          placeholder="Ex: Copyright Â© 2022 Ctg Bazaar All rights reserved."></textarea>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="modal-footer justify-content-between">
                            <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Cancel</button>
                            <input type="hidden" name="id">
                            <button type="submit" class="btn btn-primary">Change</button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <div class="modal fade" id="add-staff">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add Staff Member</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- form start -->
                    <form id="add-staff-form">
                        <div class="card-body">
                            <div class="form-group">
                                <label>First Name</label>
                                <input type="text" class="form-control" name="first_name">
                                <small class="text-danger" id="first_name-val-err-msg"></small>
                            </div>
                            <div class="form-group">
                                <label>Last Name</label>
                                <input type="text" class="form-control" name="last_name">
                                <small class="text-danger" id="last_name-val-err-msg"></small>
                            </div>
                            <div class="form-group">
                                <label>Contact No.</label>
                                <div class="input-group">
                                    <div class="input-group-prepend col-3">
                                        <select class="form-control" name="code">
                                            <% countryCodeWithNameAndFlagList.forEach(function(countryCodeWithNameAndFlag) { %>
                                                <option value="<%= countryCodeWithNameAndFlag.number %>"><%= countryCodeWithNameAndFlag.name %>
                                                    (<%= countryCodeWithNameAndFlag.number %>)
                                                </option>
                                            <% }) %>
                                        </select>
                                    </div>
                                    <!-- /btn-group -->
                                    <input type="text" class="form-control" name="number">
                                </div>
                            </div>
                            <small class="text-danger" id="number-val-err-msg"></small>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" class="form-control" name="email">
                                <small class="text-danger" id="email-val-err-msg"></small>
                            </div>
                            <div class="form-group">
                                <label>User Type</label>
                                <select class="form-control" name="type">
                                    <option value="DM" selected>Delivery Man</option>
                                    <option value="S">Support Staff</option>
                                    <option value="SA">Co-admin</option>
                                </select>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="modal-footer justify-content-between">
                            <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Add Staff</button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <div class="modal fade" id="add-prod">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add Product</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- form start -->
                    <form id="add-product-form">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label>Name</label>
                                        <input type="text" class="form-control" name="name">
                                        <small class="text-danger" id="name-val-err-msg"></small>
                                    </div>
                                    <div class="form-group">
                                        <label>Description</label>
                                        <textarea class="form-control" name="description"></textarea>
                                        <small class="text-danger" id="description-val-err-msg"></small>
                                    </div>
                                    <div class="form-group">
                                        <label>Unit</label>
                                        <input type="text" class="form-control" name="unit">
                                        <small class="text-danger" id="unit-val-err-msg"></small>
                                    </div>
                                    <div class="form-group">
                                        <label>Price</label>
                                        <input type="number" min="1" class="form-control" name="price">
                                        <small class="text-danger" id="price-val-err-msg"></small>
                                    </div>
                                    <div class="form-group">
                                        <label>Sale Price</label>
                                        <input type="number" class="form-control" name="sale_price" min="1">
                                        <small class="text-danger" id="sale_price-val-err-msg"></small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label>Discount In Percent</label>
                                        <input type="number" min="0" class="form-control" name="discount">
                                        <small class="text-danger" id="discount-val-err-msg"></small>
                                    </div>
                                    <div class="form-group">
                                        <label>Product Quantity</label>
                                        <input type="number" min="1" class="form-control" name="qty">
                                        <small class="text-danger" id="qty-val-err-msg"></small>
                                    </div>
                                    <div class="form-group">
                                        <label>Type</label>
                                        <select class="form-control" name="main_category_id">
                                            <option value="">Choose one</option>
                                            <% for(var i = 0; i < parents.length; i++) { %>
                                                <option value="<%= parents[i].id %>"><%= parents[i].name %></option>
                                            <% } %>
                                        </select>
                                        <small class="text-danger" id="main_category_id-val-err-msg"></small>
                                    </div>
                                    <div class="form-group">
                                        <label>Category</label>
                                        <select class="form-control" name="category_id">
                                            <option value="">Choose one</option>
                                            <% for(var i = 0; i < categories.length; i++) { %>
                                                <option value="<%= categories[i].id %>"><%= categories[i].name %></option>
                                            <% } %>
                                        </select>
                                        <small class="text-danger" id="category_id-val-err-msg"></small>
                                    </div>
                                    <div class="form-group">
                                        <label>Product Image</label>
                                        <div class="input-group">
                                            <div class="custom-file">
                                                <input type="file" class="custom-file-input" name="file" id="file-prod"
                                                       accept="image/*">
                                                <label class="custom-file-label">Choose file</label>
                                            </div>
                                        </div>
                                        <small class="text-danger" id="file-prod-val-err-msg"></small>
                                        <div class="mt-4">
                                            <img id="image-prod" src="#" class="rounded mx-auto d-block img-fluid"
                                                 alt="Product image">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="modal-footer justify-content-between">
                            <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Create Product</button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
