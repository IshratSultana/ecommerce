<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="#" class="brand-link">
        <img src="https://t3.ftcdn.net/jpg/03/26/54/66/360_F_326546666_4ULMNMuHcf3EqyYeiIZ6RGG4UTNsBvO6.jpg" alt="E-com Logo" class="brand-image img-circle elevation-3"
             style="opacity: .8">
        <span class="brand-text font-weight-light">E-com</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="<%= (typeof locals.session == "undefined" || locals.session.avatar === null ? 'https://www.chamber-music.org/sites/all/themes/custom/cma/images/profile-photo-empty.png' : '/public/uploads/' + locals.session.avatar) %>"
                     class="img-circle elevation-2" alt="Avatar">
            </div>
            <div class="info">
                <a href="/admin/profile"
                   class="d-block"><%= (typeof locals.session == "undefined" ? 'N/A' : locals.session.first_name + ' ' + locals.session.last_name) %></a>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <% if (typeof locals.session !== "undefined" && (locals.session.type === 'SA' || locals.session.type === 'S' )) { %>
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu"
                data-accordion="false">
                <li class="nav-item">
                    <a href="/admin/dashboard" class="nav-link <%= url === '/admin/dashboard' ? 'active' : '' %>">
                        <i class="fas fa-circle nav-icon"></i>
                        <p>Dashboard</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/products" class="nav-link <%= url === '/admin/products' ? 'active' : '' %>">
                        <i class="fas fa-circle nav-icon"></i>
                        <p>Products</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/sub_categories" class="nav-link <%= url === '/admin/sub_categories' ? 'active' : '' %>">
                        <i class="fas fa-circle nav-icon"></i>
                        <p>Category</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/orders" class="nav-link <%= url === '/admin/orders' ? 'active' : '' %>">
                        <i class="fas fa-circle nav-icon"></i>
                        <p>Orders</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/customers" class="nav-link <%= url === '/admin/customers' ? 'active' : '' %>">
                        <i class="fas fa-circle nav-icon"></i>
                        <p>Customers</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/discounts" class="nav-link <%= url === '/admin/discounts' ? 'active' : '' %>">
                        <i class="fas fa-circle nav-icon"></i>
                        <p>Discounts</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/settings"
                       class="nav-link <%= (url === '/admin/settings' || url === '/admin/settings/staff-members') ? 'active' : '' %>">
                        <i class="fas fa-circle nav-icon"></i>
                        <p>Settings</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/logout" class="nav-link">
                        <i class="fas fa-circle nav-icon"></i>
                        <p>Logout</p>
                    </a>
                </li>
            </ul>
        </nav>
        <% } else if (locals.session.type === 'DM') { %>
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu"
                data-accordion="false">
                <li class="nav-item">
                    <a href="/admin/orders" class="nav-link <%= url === '/admin/orders' ? 'active' : '' %>">
                        <i class="fas fa-circle nav-icon"></i>
                        <p>Orders</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/logout" class="nav-link">
                        <i class="fas fa-circle nav-icon"></i>
                        <p>Logout</p>
                    </a>
                </li>
            </ul>
        </nav>
        <% } %>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>
